<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detailed_person"
    android:layout_width="match_parent"
    android:background="@color/beige"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="personInformation.DetailedPersonActivity">
    <requestFocus />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="姓   名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入姓名"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />            </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="性   别"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />
                    <RadioGroup
                        android:id="@+id/rg_btn_sex"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <RadioButton
                            android:id="@+id/rbtn_sex_man"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/rbtn_sex_women"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="女"/>
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="年    龄"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入年龄"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="身    高"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入身高"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="体    重"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入体重"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="住    址"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入住址"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:gravity="left|top"
                        android:minLines="4"
                        android:textSize="@dimen/text_size_20" />            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:text="状    态"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />

                    <EditText
                        android:id="@+id/person_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:maxLines="1"
                        android:hint="点击输入身体情况"
                        android:inputType="textMultiLine"
                        android:gravity="left|top"
                        android:minLines="4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/lightgray"
                    android:paddingTop="@dimen/dimen_4" />
                <Button
                    android:id="@+id/btn_person_save"
                    android:layout_width="match_parent"
                    android:text="保存"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </ScrollView>
</LinearLayout>
