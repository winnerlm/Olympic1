<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 濉厖鐨勯鑹� -->
            <solid android:color="#C5BFE5" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="50dip" android:topLeftRadius="50dip" android:topRightRadius="0dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>

            <!-- 濉厖鐨勯鑹� -->
            <solid android:color="#e5e5e5" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="50dip" android:topLeftRadius="50dip" android:topRightRadius="0dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>
    <!-- defult -->
    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 濉厖鐨勯鑹� -->
            <!--  -->
            <solid android:color="@color/blueflush" />

            <gradient android:angle="225" android:centerColor="@color/welcome_bgc" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/welcome_bgc" android:startColor="@color/blueflush" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="50dip" android:topLeftRadius="50dip" android:topRightRadius="0dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>

</selector>