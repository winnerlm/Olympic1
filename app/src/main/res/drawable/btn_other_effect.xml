<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#C5BFE5" />

            <corners android:bottomLeftRadius="50dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="50dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>

            <!-- 填充的颜色 -->
            <solid android:color="#ed9595" />

            <corners android:bottomLeftRadius="50dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="50dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>
    <!-- defult -->
    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <!--  -->
            <solid android:color="@color/blueflush" />

            <gradient
        android:angle="315"
        android:centerColor="@color/welcome_bgc"
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="@color/blueflush"
        android:startColor="@color/welcome_bgc" />

            <corners android:bottomLeftRadius="50dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="50dip" />

            <padding android:bottom="20dip" android:left="10dip" android:right="10dip" android:top="20dip" />
        </shape></item>

</selector>